<Page x:Class="LearnApp.Win.View.Pages.TankBaseInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LearnApp.Win.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TankBaseInfo">

    <Grid Margin="0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="0,30">
            <TextBlock Text="排产名称:" Margin="10,0,0,20" FontSize="20" HorizontalAlignment="Right"/>
            <TextBlock Text="开始时间:" Margin="10,10,0,20" FontSize="20" HorizontalAlignment="Right"/>
            <TextBlock Text="排产类型:" Margin="10,10,0,20" FontSize="20" HorizontalAlignment="Right"/>
            <TextBlock Text="排产周期（天）:" Margin="10,10,0,20" FontSize="20" HorizontalAlignment="Right"/>
            <TextBlock Text="备注:" Margin="10,10,0,20" FontSize="20" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>

</Page>
